<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Import Scripts -->
  <script src="https://kit.fontawesome.com/f6eb3ac13e.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Import Styles -->
  <link rel="stylesheet" href="../styles/all-wines.css" type="text/css" />
  <link rel="stylesheet" href="../styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="../styles/adminbuttons.css" type="text/css"/>
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />

  <!-- Bootstrap imports -->
  <link rel = "stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" type="text/css" />
  <link rel = "stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" type="text/css" />

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin page</title>
</head>
<body class="main">
<header>
  <%- include('partials/_navbar') %>
  <h1> <%= wineryListings.winery %> Admin Dashboard</h1>
</header>
<% wineryListings.forEach((wine) => { %>
  <form method="POST" action="/soldout" class="wine-form" data-id="<%= wine.id %>">
    <div class="wine-listing">
      <img src= <%= wine.wine_image_url %> class="image" >
      <img src= <%= wine.winery_image_url %> class="logo">
      <span class="price">Price: $<%= wine.price %>.00</span>
      <span class="year">Year: <%= wine.year %></span>
      <span class="label">Label: <%= wine.wine_type %> </span>
      <span class="award"><%= wine.award %></span>
      <span class="desc"><%= wine.wine_name %></span>
      <% if (wine.sold_out) { %>
      <button class="alreadysoldout">Already Soldout</button>
      <% } else { %>
        <button class="soldout">Mark as Soldout</button>
        <% } %>
      </form>
        <form method="POST" action="/removelisting" class="delete-form" data-id="<%= wine.id %>">
          <button class="delete">Delete Listing</button>
        </form>
      <i class="fa-solid fa-heart"></i>
      <article class="actual-desc">
        <%= wine.description %>
      </article>
    </div>
<% }) %>
<footer>
  <%- include('partials/_footer') %>
</footer>
</body>
</html>
